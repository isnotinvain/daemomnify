{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format-cpp.sh --warnings-as-errors \"$CLAUDE_FILE_PATH\""
          }
        ]
      }
    ]
  }
}
